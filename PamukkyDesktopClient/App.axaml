<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="PamukkyDesktopClient.App"
			 
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options.
xmlns:themes="clr-namespace:Material.Styles.Themes;assembly=Material.Styles"
			 -->
    <Application.Styles>
		<FluentTheme>
			<FluentTheme.Palettes>
				<ColorPaletteResources x:Key="Light" Accent="Orange" RegionColor="White" ErrorText="Red" />
				<ColorPaletteResources x:Key="Dark" Accent="Orange" RegionColor="Black" ErrorText="Yellow" />
			</FluentTheme.Palettes>
		</FluentTheme>
		<!--<themes:MaterialTheme PrimaryColor="Orange" SecondaryColor="Amber"></themes:MaterialTheme>-->
    </Application.Styles>
	<TrayIcon.Icons>
		<TrayIcons>
			<TrayIcon Icon="/Assets/pamukky.ico"
						ToolTipText="Pamukky V3">
				<TrayIcon.Menu>
					<NativeMenu>
						
					</NativeMenu>
				</TrayIcon.Menu>
			</TrayIcon>
		</TrayIcons>
	</TrayIcon.Icons>
</Application>
